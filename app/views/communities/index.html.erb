


<div class="row">
  <div class="col-sm-6">
    <h1>Communities</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_community_path, class: 'btn btn-primary' do %>
    Add New Community
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Url</th>
            <th>Bio</th>
            <th>User</th>
            
      </tr>
    </thead>

    <tbody>
      <% @communities.each do |community| %>
        <%= content_tag :tr, id: dom_id(community), class: dom_class(community) do %>
          
            <td><%= link_to community.name, community %></td>
          

                      <td><%= community.url %></td>
                      <td><%= community.bio %></td>
                      <td><%= community.user %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
